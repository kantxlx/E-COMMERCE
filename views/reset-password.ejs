<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redefinir Senha</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Font Awesome para os ícones -->
    <link rel="stylesheet" href="/css/login&cadastro/style.css">
</head>
<body>
    <div class="container">
        <h1>Redefinir Senha</h1>

        <% if (error) { %>
            <p class="error"><%= error %></p>
        <% } %>

        <% if (typeof success !== 'undefined' && success) { %>
            <p class="success"><%= success %></p>
        <% } %>

        <!-- Formulário de redefinição de senha -->
        <form action="/user/reset-password" method="POST">
            <input type="hidden" name="userId" value="<%= userId %>">
            
            <label for="newPassword">Nova Senha:</label>
            <div class="input-group">
                <input type="password" id="newPassword" name="newPassword" required>
                <span class="eye-icon" onclick="togglePassword('newPassword')">
                    <i class="fa fa-eye"></i>
                </span>
            </div>
        
            <label for="confirmPassword">Confirme a Senha:</label>
            <div class="input-group">
                <input type="password" id="confirmPassword" name="confirmPassword" required>
                <span class="eye-icon" onclick="togglePassword('confirmPassword')">
                    <i class="fa fa-eye"></i>
                </span>
            </div>
        
            <button type="submit" class="button-zoom">Redefinir Senha</button>
        </form>
    </div>
    
    <% if (typeof success !== 'undefined' && success) { %>
        <script>
            // Redireciona para a página de login após 3 segundos
            setTimeout(function() {
                window.location.href = '/login'; // Altere para o URL da sua página de login
            }, 3000);
        </script>
    <% } %>
    
    <script src="/js/login&cadastro/script.js"></script>
</body>
</html>
